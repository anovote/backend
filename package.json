{
    "name": "backend",
    "version": "1.0.3",
    "description": "Anovote backend",
    "main": "index.js",
    "repository": "https://github.com/anovote/backend",
    "author": "Anovote",
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev": "ts-node-dev -r tsconfig-paths/register --respawn --inspect=0.0.0.0:9229 ./src/index.ts",
        "dev:docker": "docker-compose -f docker-compose.yml -f docker-compose-dev.yml up -d db && ts-node-dev -r tsconfig-paths/register --respawn --inspect=0.0.0.0:9229 ./src/index.ts",
        "build": "NODE_ENV=production tsc --project ./tsconfig.prod.json && tsc-alias",
        "prod": "NODE_ENV=production node dist/index.js",
        "test": "jest --roots=tests",
        "test:locally": "docker-compose --env-file .env.test -f docker-compose-test.yml up -d testdb && jest --roots=tests --runInBand --watch",
        "test:unit": "jest --roots=tests --runInBand --watchAll",
        "test:api": "jest --roots=integration-tests --runInBand --watchAll",
        "check-types": "tsc",
        "lint": "eslint . --ext .ts --fix",
        "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
        "spellCheck": "cspell --config ./.vscode/cspell.json --relative -u '/**/*.{tsx,jsx,ts,json,md}'"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/cors": "^2.8.9",
        "@types/crypto-js": "^4.0.1",
        "@types/express": "^4.17.11",
        "@types/express-rate-limit": "^5.1.1",
        "@types/jest": "^26.0.20",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/morgan": "^1.9.2",
        "@types/node": "^14.14.25",
        "@types/node-cron": "^2.0.3",
        "@types/nodemailer": "^6.4.0",
        "@types/socket.io": "^2.1.13",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^4.15.2",
        "@typescript-eslint/parser": "^4.15.2",
        "eslint": "^7.21.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "jest": "^26.6.3",
        "jest-extended": "^0.11.5",
        "module-alias": "^2.2.2",
        "prettier": "^2.2.1",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.0",
        "ts-node": "^9.1.1",
        "ts-node-dev": "^1.1.1",
        "tsc-alias": "^1.2.6",
        "tsconfig-paths": "^3.9.0",
        "tscpaths": "^0.0.9",
        "typescript": "^4.1.3"
    },
    "dependencies": {
        "bcrypt": "^5.0.0",
        "chalk": "^4.1.0",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.13.1",
        "cors": "^2.8.5",
        "crypto-js": "^4.0.0",
        "date-fns": "^2.20.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-rate-limit": "^5.2.5",
        "helmet": "^4.4.1",
        "http-status-codes": "^2.1.4",
        "jsonwebtoken": "^8.5.1",
        "morgan": "^1.10.0",
        "node-cron": "^3.0.0",
        "nodemailer": "^6.5.0",
        "pg": "^8.5.1",
        "reflect-metadata": "^0.1.13",
        "socket.io": "^3.1.2",
        "socket.io-client": "^3.1.2",
        "typeorm": "^0.2.30",
        "typeorm-logger-adaptor": "^1.0.3",
        "winston": "^3.3.3"
    }
}
